apiVersion: v1
kind: Pod
metadata:
  name: kube-scheduler
  namespace: kube-system
spec:
  hostNetwork: true
  containers:
  - name: kube-scheduler
    image: gcr.io/google_containers/hyperkube::{{kraken_config.master.nodepool.kubeConfig.version}}
    command:
    - /hyperkube
    - scheduler
    - --master=127.0.0.1:8080
    - --v=2
    - --leader-elect=true
    terminationMessagePath: /dev/termination-log