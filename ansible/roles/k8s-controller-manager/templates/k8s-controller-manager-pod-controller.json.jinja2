{
  "apiVersion": "{{kubernetes_api_version}}",
  "kind": "Pod",
  "metadata": {
    "name": "k8s-controller-manager"
  },
  "spec": {
    "hostNetwork": true,
    "containers": [
      {
        "name": "controller-manager",
        "image": "{{hyperkube_image}}",
        "command": [
          "/hyperkube",
          "controller-manager",
          {% for k,v in controller_manager_settings.iteritems() %}
            "--{{k}}={{v}}",
          {% endfor %}
          ""
        ]
      }
    ]
  }
}
