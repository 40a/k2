[Unit]
Description=Launch hyperkube proxy
Requires=hyperkube-master.service
After=hyperkube-master.service

[Service]
Restart=always
ExecStartPre=-/usr/bin/docker kill kube-proxy
ExecStartPre=-/usr/bin/docker rm kube-proxy
ExecStart=/usr/bin/docker run \
  --name kube-proxy \
  --net=host \
  --privileged \
  {{hyperkube_image}} \
    /hyperkube proxy \
    --master=http://127.0.0.1:8080 \
    --v={{kubernetes_verbosity}}
