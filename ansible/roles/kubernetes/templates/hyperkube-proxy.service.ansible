[Unit]
Description=Launch hyperkube proxy
Requires=hyperkube-master.service
After=hyperkube-master.service

[Service]
Restart=always
ExecStartPre=-/usr/bin/docker kill kube-proxy
ExecStartPre=-/usr/bin/docker rm kube-proxy
ExecStart=/usr/bin/docker run --net=host --privileged --name kube-proxy gcr.io/google_containers/hyperkube:v{{kubernetes_version}} /hyperkube proxy --master=http://127.0.0.1:8080 --v={{kubernetes_verbosity}}