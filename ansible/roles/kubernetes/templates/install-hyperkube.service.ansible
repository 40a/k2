[Unit]
Description=Install hyperkube
Requires=network-online.target
After=network-online.target

[Service]
ExecStartPre=/usr/bin/wget --timestamp -O /opt/bin/hyperkube.installing {{kubernetes_binaries_uri}}/hyperkube
ExecStartPre=/usr/bin/chmod +x /opt/bin/hyperkube.installing
ExecStart=/usr/bin/mv -v /opt/bin/hyperkube.installing /opt/bin/hyperkube.pending
Type=oneshot
RemainAfterExit=true
