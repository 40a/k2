[Unit]
Description=Launch hyperkube master
Requires=network-online.target
After=network-online.target

[Service]
Restart=always
LimitNOFILE=infinity
ExecStart=docker run --net=host -d -v /var/run/docker.sock:/var/run/docker.sock -v /opt/bin/manifests:/etc/kubernetes/manifests-override gcr.io/google_containers/hyperkube:{{kubernetes_version}} /hyperkube kubelet --config=/etc/kubernetes/manifests-override --enable_server --cluster_domain={{dns_domain}} --cluster_dns={{dns_ip}} --hostname_override=$(hostname -i)