[Unit]
Requires=kraken-render.service
Description=Launch kraken services
[Service]
Type=simple
Restart=on-failure
RestartSec=10
ExecStartPre=-/usr/bin/chmod +x /opt/bin/kraken-create-services.sh
ExecStart=/usr/bin/bash /opt/bin/kraken-create-services.sh
ExecStop=/usr/bin/touch /opt/bin/kraken-created-services
ExecStopPost=-/usr/bin/bash /opt/bin/kraken-delete-services.sh
ExecStopPost=-/usr/bin/rm /opt/bin/kraken-created-services