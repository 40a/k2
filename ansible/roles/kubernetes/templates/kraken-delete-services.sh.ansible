#! /usr/bin/bash
#! /usr/bin/bash
set -x

if test -f "/opt/bin/kraken-created-services"; then exit 0; fi

cd /opt/bin/kraken-services-rendered
service_dirs="{{kraken_services_dirs}}"

for dir in $service_dirs; do
  /opt/bin/kubectl --kubeconfig={{ kubelet.kubeconfig | expanduser }} delete -f ./$dir/ || true
done