[Unit]
Description=Launch hyperkube node proxy
Requires=hyperkube-node.service
After=hyperkube-node.service

[Service]
Restart=always
ExecStartPre=-/usr/bin/docker kill kube-proxy
ExecStartPre=-/usr/bin/docker rm kube-proxy
ExecStart=/usr/bin/docker run \
  --net=host \
  --privileged \
  --name kube-proxy \
  {{hyperkube_image}} \
    /hyperkube proxy \
    --master=http://{{master_private_ip}}:8080 \
    --v={{kubernetes_verbosity}}
