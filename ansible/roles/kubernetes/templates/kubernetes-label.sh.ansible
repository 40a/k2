#!/bin/sh

labeled=false
while true; do
  if ! $labeled; then
    /opt/bin/kubectl --kubeconfig={{ kubelet.kubeconfig | expanduser }} \
      label nodes {{ ansible_local.kubernetes_node_ip_fact.node_ip_address }} \
      kraken-node={{inventory_hostname}} \
      --overwrite && labeled=true
    sleep 5
  else
    sleep 900
  fi
done

