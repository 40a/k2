#! /usr/bin/bash
set -o errexit
set -o nounset
set -o pipefail

cd /opt/bin/kraken-services-rendered
for dir in "{{kraken_services_dirs}}"; do
  /opt/bin/kubectl --kubeconfig={{ kubelet.kubeconfig | expanduser }} delete -f ./$dir/ || true
  /opt/bin/kubectl --kubeconfig={{ kubelet.kubeconfig | expanduser }} create -f ./$dir/
done
